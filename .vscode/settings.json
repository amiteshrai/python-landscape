{
  // Python Runtime
  "python.pythonPath": "bin/python3",
  // Python Linting & Formatting Settings
  "python.linting.lintOnSave": true,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.pylintArgs": ["--max-line-length=88", "--ignore=E501"],
  "python.analysis.disabled": ["unresolved-import", "undefined-variable"],
  "python.formatting.provider": "black",
  // Python Unit Testing Settings
  "python.testing.unittestArgs": [
    "-v",
    "-s",
    "./src/unit_testing",
    "-p",
    "test_*.py"
  ],
  "python.testing.pytestEnabled": false,
  "python.testing.nosetestsEnabled": false,
  "python.testing.unittestEnabled": true,
  // Editor Settings
  "editor.minimap.enabled": false,
  "editor.fontFamily": "Fira Code Retina", // You need to install first
  "editor.fontSize": 14,
  "editor.tabSize": 4,
  "editor.glyphMargin": true,
  "editor.fontLigatures": true,
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 4,
  "editor.cursorBlinking": "solid",
  "editor.folding": true,
  "editor.autoIndent": "advanced",
  "editor.renderIndentGuides": false,
  "editor.renderLineHighlight": "gutter",
  "editor.renderWhitespace": "none",
  "editor.trimAutoWhitespace": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.snippetSuggestions": "top",
  "editor.codeLens": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  // Markdown Linting
  "markdownlint.run": "onSave",
  // Terminal
  "terminal.integrated.fontFamily": "Fira Code Retina",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": "100",
  "workbench.colorCustomizations": {
    "activityBar.background": "#28693c",
    "activityBar.activeBorder": "#35235c",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#35235c",
    "activityBarBadge.foreground": "#e7e7e7",
    "titleBar.activeBackground": "#1a4427",
    "titleBar.inactiveBackground": "#1a442799",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveForeground": "#e7e7e799",
    "statusBar.background": "#1a4427",
    "statusBarItem.hoverBackground": "#28693c",
    "statusBar.foreground": "#e7e7e7"
  },
  "peacock.color": "#1a4427"
}
